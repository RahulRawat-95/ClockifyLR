<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_show_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:text="@string/in_time"
        android:textColor="@color/black_313848"
        app:layout_constraintEnd_toStartOf="@id/tv_show_out_time"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_show_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/out_time"
        android:textColor="@color/black_313848"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_show_in_time"
        app:layout_constraintTop_toTopOf="@id/tv_show_in_time" />

    <TextView
        android:id="@+id/tv_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_in"
        android:padding="15dp"
        android:text="@string/in_time"
        android:textColor="@color/white_FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/tv_out_time"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_show_in_time" />

    <TextView
        android:id="@+id/tv_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_out"
        android:padding="15dp"
        android:text="@string/out_time"
        android:textColor="@color/white_FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_in_time"
        app:layout_constraintTop_toTopOf="@id/tv_in_time" />

</androidx.constraintlayout.widget.ConstraintLayout>